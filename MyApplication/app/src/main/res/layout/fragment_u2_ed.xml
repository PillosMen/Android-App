<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Unidad 2"
            android:layout_marginTop="10dp"
            android:textSize="30dp" />

        <LinearLayout
            android:id="@+id/pregunta1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="10dp"
                android:text="1. C++ es un:" />

            <RadioGroup
                android:id="@+id/opcion_p1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/p1_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:layout_marginLeft="10dp"
                    android:text="a. Un lenguaje de secuencias de comandos del lado del cliente. " />

                <RadioButton
                    android:id="@+id/p1_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:layout_marginLeft="10dp"
                    android:text="b. Un programa para hacer programas. " />

                <RadioButton
                    android:id="@+id/p1_c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:layout_marginLeft="10dp"
                    android:text="c. Un lenguaje de progamación general." />

            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pregunta2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="10dp"
                android:text="2. ¿Qué son los Punteros?" />

            <RadioGroup
                android:id="@+id/opcion_p2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/p2_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:layout_marginLeft="10dp"
                    android:text="a. Son un tipo de datos formado por una colección finita de elementos no necesariamente homogéneos. " />

                <RadioButton
                    android:id="@+id/p2_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:layout_marginLeft="10dp"
                    android:text="b. Son tipos de datos simples capaces de almacenar la posición de una variable en memoria principal.  " />

                <RadioButton
                    android:id="@+id/p2_c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:layout_marginLeft="10dp"
                    android:text="c. Son una agrupación de datos homogéneos, es decir, con un mismo tipo de dato básico asociado. " />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pregunta3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="10dp"
                android:text="3. Los arreglos se clasifican en:" />

            <RadioGroup
                android:id="@+id/opcion_p3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/p3_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:layout_marginLeft="10dp"
                    android:text="a. Unidimensionales. " />

                <RadioButton
                    android:id="@+id/p3_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:layout_marginLeft="10dp"
                    android:text="b. Bidimensionales. " />

                <RadioButton
                    android:id="@+id/p3_c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:layout_marginLeft="10dp"
                    android:text="c. Multidimensionales. " />

                <RadioButton
                    android:id="@+id/p3_d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:layout_marginLeft="10dp"
                    android:text="d. Todas las anteriores." />

            </RadioGroup>

        </LinearLayout>

        <TextView
            android:id="@+id/calificacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="Puntos" />

        <Button
            android:id="@+id/guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Enviar"
            android:layout_marginTop="25dp"
            android:onClick="guardarEncuesta"
            />

    </LinearLayout>

</ScrollView>

